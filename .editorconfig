# .editorconfig
# EditorConfig is awesome: https://editorconfig.org

# Top-level configuration
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
max_line_length = 50

# Go source files
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 50
